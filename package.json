{
  "name": "@vmd/logging",
  "version": "0.0.0-development",
  "description": "A library for common vmd logging components/services",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "registry": "https://nexus.vmduk.net/repository/Applications.Components.Hosted/"
  },
  "scripts": {
    "build": "rollup -c",
    "prebuild": "rimraf ./lib",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "commit": "cz",
    "lint": "eslint --cache \"./src/**/*.ts\"",
    "prelint": "prettier --check \"./src/**/*.ts\"",
    "release": "semantic-release",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VMDDTE/applications-common-logging.git"
  },
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/VMDDTE/applications-common-logging/issues"
  },
  "homepage": "https://github.com/VMDDTE/applications-common-logging#readme",
  "dependencies": {
    "node-cron": "^2.0.3",
    "simple-node-logger": "^18.12.24"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^12.19.8",
    "@types/node-cron": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "commitizen": "^4.2.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.34.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^17.3.0",
    "typescript": "^4.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,json,md}": "prettier --write"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  },
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "assets": [
            "lib/**"
          ]
        }
      ]
    ]
  }
}
